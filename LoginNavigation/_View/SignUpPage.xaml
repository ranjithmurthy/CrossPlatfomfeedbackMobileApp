<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="LoginNavigation.SignUpPage"
			 Title="Sign Up">
  <ContentPage.Content>
    <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="Center">
      <Label Text="Signup for a Restaurant FeedBack Account" FontSize="20" HorizontalTextAlignment="Center"/>
      <StackLayout VerticalOptions="StartAndExpand">
        <Label Text="FirstName" />
        <Entry Text="{Binding FirstName}" Placeholder="FirstName" />

        <Label Text="LastName" />
        <Entry Text="{Binding LastName}" Placeholder="LastName" />

        <Label Text="EmailAddress" />
        <Entry Text="{Binding UserName}" Placeholder="UserName" />

        <Label Text="Password" />
        <Entry Text="{Binding Password}" Placeholder="password" />

        <Label Text="ConfirmPassword" />
        <Entry Text="{Binding ConfirmPassword}" Placeholder="ConfirmPassword" />


        <Button Text="Sign Up" Clicked="OnSignUpButtonClicked" />

        <Label Text="{Binding DisplayMessage}" />
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>