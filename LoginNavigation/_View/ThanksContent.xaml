<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:classes1="clr-namespace:XFormsUI.Classes;assembly=FeedbackApp"

             x:Class="LoginNavigation._View.ThanksContent"
             Title="Feedback Submitted "
             BackgroundImage="{x:Static classes1:ImagePathResources.BackgroundImagePath}">
  
  <ContentPage.Content>
    <StackLayout Spacing="0"
               Padding="10, 40, 10, 40"
               Orientation="Horizontal"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start">
      
      <Label Text="Thank you for Feedback"
             FontSize="40"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             Grid.Row="0"
             TextColor="White">
        <Label.FontFamily>
          <OnPlatform x:TypeArguments="x:String">
            <OnPlatform.iOS>MarkerFelt-Thin</OnPlatform.iOS>
            <OnPlatform.Android></OnPlatform.Android>
            <OnPlatform.WinPhone></OnPlatform.WinPhone>
          </OnPlatform>
        </Label.FontFamily>
      </Label>
      
    
  </StackLayout>
    </ContentPage.Content>
</ContentPage>